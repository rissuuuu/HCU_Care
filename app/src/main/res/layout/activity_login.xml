<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01111100"
    tools:context="com.example.hcucare.Login">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="550dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="40dp">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:text="Sign in to"
                    android:textColor="#CC3636"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDesc"
                    android:text="HCU care"
                    android:transitionName= "login"
                    android:textColor="#CC3636"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#FFF">
                    <ImageView
                    android:layout_below="@id/tvLogin"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/uohlogorgb1"/>
            </LinearLayout>
                <EditText
                    android:id="@+id/id_username"
                    android:textAlignment="center"
                    android:background="@drawable/butt_style"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:hint="Enter your email" />
                <EditText
                    android:id="@+id/id_password"
                    android:textAlignment="center"
                    android:background="@drawable/butt_style"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_more_horiz_black_24dp"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/id_Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_uisquare"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="#FFF" />
                <TextView
                    android:id="@+id/id_forgotpassword"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="Forgot Password?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>