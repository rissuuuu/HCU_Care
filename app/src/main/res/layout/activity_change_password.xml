<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F4FD"
    tools:context="com.example.hcucare.ChangePassword">
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/id_backbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:background="@drawable/header"/>


    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:transitionName="image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/circlet" />
    <ImageView
        android:id="@+id/circle4"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_below="@+id/bgHeader"
        android:layout_marginTop="-130dp"
        android:layout_marginRight="-100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/circlet" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="40dp">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change your Password"
                    android:transitionName="login"
                    android:textColor="#000"
                    android:textSize="25sp"
                     />
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/id_oldpassword"
                    android:textAlignment="center"
                    android:background="@drawable/butt_style"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_more_horiz_black_24dp"
                    android:hint="Enter old Password" />
                <EditText
                    android:id="@+id/id_newpassword"
                    android:textAlignment="center"
                    android:background="@drawable/butt_style"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_more_horiz_black_24dp"
                    android:hint="Enter new Password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Button
                    android:layout_marginTop="60dp"
                    android:id="@+id/id_bt_changepassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_uisquare"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentBottom="true"
        android:id="@+id/bgFooter"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:background="@drawable/headero"/>
</RelativeLayout>