<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7DDC1"
    tools:context=".Ambulance">
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/id_backbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:background="@drawable/header"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentBottom="true"
        android:id="@+id/bgFooter"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:background="@drawable/headero"/>
    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:transitionName="image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/circlet" />
    <ImageView
        android:id="@+id/circle4"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_below="@+id/bgHeader"
        android:layout_marginTop="-130dp"
        android:layout_marginRight="-100dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/circlet" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="40dp">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambulance Service"
                    android:transitionName="login"
                    android:textColor="#000"
                    android:textSize="25sp"
                    />
                <LinearLayout
                    android:background="@drawable/butt_style"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:textAlignment="center"
                        android:id="@+id/spinner_condition"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/butt_style"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:textAlignment="center"
                        android:id="@+id/spinner_Hostel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />
                </LinearLayout>
                <EditText
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/butt_style"
                    android:id="@+id/id_roomno"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Room Number"
                    />
                <EditText
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/butt_style"
                    android:id="@+id/id_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Phone Number"
                    />

                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/id_requestambulance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_uisquare"
                    android:text="Request Ambulance"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>